{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}
{% block h_one %}Orders{% endblock %}

{% block body %}
<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Order ID</th>
			<th scope="col">Date</th>
			<th scope="col">Amount</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		{% for order in orders %}
			<tr>
				<td>{{ order.id }}</td>
				<td>{{ order.orderId }}</td>
				<td>{{ order.date|date }}</td>
				<td><a class="btn btn-info" href="{{ path('show_order', {id: order.id}) }}">Details</a></td>
			</tr>
		{% endfor %}
	</tbody>
</table>

</div>
{% endblock %}
